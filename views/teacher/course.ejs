<%-include('partials/header')%>
    <link rel="stylesheet" type="text/css" href="/css/course.css" />
    <title><%=title%></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1"
      crossorigin="anonymous"
    />
  </head>

  <body style="background-color: whitesmoke;">
    <!-- <%-include('partials/top_nav')%> -->
    <nav class="navbar navbar-expand-lg navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Navbar</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0"></ul>
          <form class="d-flex">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 right">
              <li class="nav-item dropdown">
                <a
                  class="nav-link dropdown-toggle toggleright"
                  href="#"
                  id="navbarDropdown"
                  role="button"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                >
                 <%=loggedUserName%>
                </a>
                <div
                class="dropdown-menu dropdown-menu-right"
                aria-labelledby="navbarDropdownMenuLink"
              >
                <a class="dropdown-item" href="/teacher/referral">Get Referral</a>
                <a class="dropdown-item" href="#">Change Password</a>
                <a class="dropdown-item" href="/logout">Log Out</a>
              </div>
              </li>
            </ul>
          </form>
        </div>
      </div>
    </nav>

    <div class="componenets">
        <%-include('partials/side_nav')%>
        <span class="comp_Add">
          <button type="Submit" id="add_course" class="btn btn-outline-success add_course">Add Assingment</button>
          <a  id="add_course" class="btn btn-outline-success add_course" href="/teacher/course/share/<%=uniqueCode%>">Add Student</a>
      </span>
      <div class="course_container">
        <h1 class="course_head">
          <spna class="hear--border"><%=title%></spna>
        </h1>
        <h3 style="display: inline-block;" class="message <%=messageClass%>"><%=message%></h3>
        <h5 class="assi__created">
          Created Date:  <span class="assi__date"><%=created%></span>
        </h5>
        <h5 class="assi__created">
          Student Alloted <span class="assi__date"><%=studentLength%></span>
        </h5>
        <div class="row con_sub-col">
          <div class="col sub_col">
            <h5 class="assi_head">
              <span class="assi__border">All Assingments</span>
            </h5>
            <form class="d-flex">
              <input
                class="form-control me-2 course_form"
                type="search"
                placeholder="Search"
              />
              <button class="btn btn-outline-success btn-search" type="submit">
                Search
              </button>
              <button type="button" class="btn btn-outline-success btn-more">
                Assingment
              </button>
            </form>
            <!-- <button type="button" class="btn btn-outline-dark btn-lg">Searchbar</button> -->
            <div class="scroll_div">
              <ol class="form__ol">

                <% assignments.forEach((assignment)=>{      %>

                  
                <li class="form__li" onclick="hitAnchor('<%=assignment.id%>')">
                  <a href="/teacher/course/submissions/<%=courseId%>/<%=assignment.id%>" class="<%=assignment.id%>" style="text-decoration: none;color: black;">
                  <%=assignment.title%><span class="date__ass"><%=assignment.due%></span>
                  </a>
                </li>

                <%   })              %>
               
              </ol>
            </div>
          </div>
          <div class="col sub_col">
            <h5 class="assi_head">
              <span class="assi__border">Student Allorted to this Course</span>
            </h5>
            <form class="d-flex">
              <input
                class="form-control me-2 course_form"
                type="search"
                placeholder="Search"
              />
              <button class="btn btn-outline-success btn-search" type="submit">
                Search
              </button>
              <button type="button" class="btn btn-outline-success btn-more">
                Student
              </button>
            </form>
            <!-- <button type="button" class="btn btn-outline-dark btn-lg">Searchbar</button> -->
            <div class="scroll_div">
              <ol class="form__ol">
                <% students.forEach((student)=>{      %>
                <li class="form__li">
                 <%=student.name%><span class="form__span-check"
                    ></span>
                </li>
                <%   })              %>

                
              </ol>
            </div>
          </div>
        </div>
      </div>

      <div class="pop-upbackground">
        <div class="pop_up-add">
            <div class="main_popup">
                <span class="popup_head">Add New Assingment</span>
                <span class="close" id="closeBtn">&times;</span>
                <div class="border_bottom-popup"></div>
                <div class="popup_body">
                  <form action="/teacher/add-assignment/" method="post"  encType="multipart/form-data">
                    <div class="popup-course">                      
                        <label for="name" class="popup-course_label">Assignment Title</label>
                        <input class="popup-course_name" type="text" autocomplete="off" name="title" required>
                        <input type="text" value="<%=courseId%>" name="courseId" hidden>
                    </div>
                    <div class="popup-inv">
                        <label for="name" class="popup-course_label ">Description</label>
                        <textarea class="popup-course_name " id="invi" type="text" autocomplete="off" name="description"></textarea>
                        
                    </div>
                    <span class="popup_Or">OR</span>
                    <div class="popup_update">
                        <label for="name" class="popup-course_label">Upload File</label>
                        <input class="popup-course_file" type="file" name="assignmentFile">

                    </div>
                    <div class="popup-date">
                        <label for="name" class="popup-course_label ">Due Date</label>
                        <input class="popup-course_name "  type="datetime-local" autocomplete="off" name="dueDate" >

                    </div>
                    <div class="popup-inv">
                        <label for="name" class="popup-course_label ">Marks</label>
                        <input class="popup-course_name "  type="text" autocomplete="off" name="marks">

                    </div>
                    <button  class="btn btn-outline-success popup-button">Add Assignment</button>
                  </form>
                </div>
            </div>
        </div>
    </div>
    </div>

<!-- footer script -->
<%-include('partials/footer_script')%>
  </body>
</html>
